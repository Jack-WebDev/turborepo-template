{
  "name": "@codeforge/buildkit",
  "private": true,
  "version": "1.0.0",
  "description": "A versatile build utility for JavaScript and TypeScript projects, providing seamless support for ESM and CJS, TypeScript type definitions, and modern bundling workflows.",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "buildkit": "./bin/buildkit.js"
  },
  "scripts": {
    "build": "tsup",
    "lint": "eslint '**/*.ts'"
  },
  "keywords": [],
  "author": "Jack WebDev",
  "license": "MIT",
  "dependencies": {
    "esbuild": "^0.24.2",
    "tsup": "^8.3.5"
  }
}